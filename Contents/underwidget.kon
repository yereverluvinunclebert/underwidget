        <action trigger="onKeyDown">
              <![CDATA[
                if (system.event.keyCode==116) {
                    print("pressing "+system.event.keyCode);
                    reloadWidget();
                }
               ]]>
        </action>

	<action trigger="onTellWidget">
        <![CDATA[
		handleExternalCall();
        ]]>
	</action>

	<action trigger="onload">
		<![CDATA[
		include("vitality.js");
