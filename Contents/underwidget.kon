    <preference hidden="true" description="Check this box if you don't want to see the Licence Conditions again." name="licenceHide" title="Don't Show Licence Again" defaultValue="0" type="checkbox"/>

    <preference title="Shadow Present:" name="shadowPref" type="popup" description="Enable or disable the shadow overlay - this is useful when running the widget as a live part of a steampunk desktop. Gives the widget a 3D hollowed-out effect" defaultValue="enable">
